<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() {
            document.getElementById("card").classList.add("show");
        }, 2000);
        createFireworks();
    });
    function createFireworks() {
        const colors = ['#2ecc71', '#27ae60', '#16a085', '#1abc9c'];
        for (let i = 0; i < 50; i++) {
            const firework = document.createElement('div');
            firework.classList.add('firework');
            firework.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            firework.style.width = firework.style.height = `${Math.random() * 10 + 5}px`;
            firework.style.top = `${Math.random() * 100}vh`;
            firework.style.left = `${Math.random() * 100}vw`;
            firework.style.animationDelay = `${Math.random() * 3}s`;
            firework.style.animationDuration = `${Math.random() * 1.5 + 0.5}s`;
            document.body.appendChild(firework);
        }
    }
</script>
